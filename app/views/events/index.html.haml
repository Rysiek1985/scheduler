    .col.mb-3
      .card.h-100.border-transparent.box-shadow-sm
        .card-body.justify-content-strech
          %h5.widget-title
            = event.title
          %h6.start_time.card-subtitle= event.start_time ? "#{l event.start_time, :format => :date_format}" : {}
          %p= event.location
        .card-footer.bg-transparent.border-transparent
